{% from 'helpers/helpers.jinja' import nav_tab %}

<!DOCTYPE HTML>
<html lang="en-US">
<head>
	<meta charset="UTF-8">
	<title>Notebook - {{ title }}</title>

	<!-- favicon -->
	<link rel="shortcut icon" href="/img/favicon.ico">

	<!-- styles -->
	<link rel="stylesheet" href="/css/styles.css">
	{% block css %}{% endblock %}

	<!-- HTML5 shim -->
	<!--[if lt IE 9]>
		<script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
	<![endif]-->
</head>
<body>

	<!-- the navbar -->
	<div class="navbar navbar-fixed-top navbar-inverse">
		<div class="navbar-inner">
			<div class="container-fluid">
				<a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</a>
				<a class="brand" href="/"><p class="notebook">Notebook</p></a>
				<div class="nav-collapse collapse">
					{% if user %}
						<ul class="nav pull-right">
							<li class="dropdown">
								<a href="#" id="account-drop" role="button" class="dropdown-toggle" data-toggle="dropdown"><i class="icon-user icon-white"></i> {{ user.nickname() }} <b class="caret"></b></a>
								<ul class="dropdown-menu" role="menu" aria-labelledby="account-drop">
									<li><a href="settings.html" tabindex="-1"><i class="icon-cog"></i> Settings</a></li>
									<li><a href="{{ login_url }}" tabindex="-1"><i class="icon-off"></i> Log out</a></li>
								</ul>
							</li>
						</ul>
					{% else %}
						<p class="navbar-text pull-right">
							<a href="{{ login_url }}">Log in</a>
						</p>
					{% endif %}
					{{ nav_tab(title) }}
					<!-- <ul class="nav">
						<li class="active"><a href="/"><i class="icon-white icon-home"></i> Home</a></li>
						<li><a href="/about"><i class="icon-white icon-info-sign"></i> About</a></li>
						<li><a href="/contact"><i class="icon-white icon-envelope"></i> Contact</a></li>
					</ul> -->
				</div>
			</div>
		</div>
	</div>

	<div class="container-fluid">
		{% if user %}
			<div class="span3">
				<ul class="nav nav-list">
					<li class="nav-header">Notes</li>
					<li><a href="notes.html"><i class="icon-pencil"></i> Browse</a></li>
					<li><a href="upload.html"><i class="icon-upload"></i> Upload</a></li>
					<li class="nav-header">Account</li>
					<li><a href="settings.html"><i class="icon-cog"></i> Settings</a></li>
					<li><a href="{{ login_url }}"><i class="icon-off"></i> Log out</a></li>
				</ul>
			</div>
			<div class="span9">
				{% block content %}{% endblock %}
			</div>
		{% else %}
			<div class="span12">
				{{ self.content() }}
			</div>
		{% endif %}
	</div>

	<!-- scripts -->
	<script type="text/javascript">
		WebFontConfig = {
			 google: { families: [ 'Fredericka+the+Great::latin' ] }
		};
		(function() {
			var wf = document.createElement('script');
			wf.src = ('https:' == document.location.protocol ? 'https' : 'http') +
				'://ajax.googleapis.com/ajax/libs/webfont/1/webfont.js';
			wf.type = 'text/javascript';
			wf.async = 'true';
			var s = document.getElementsByTagName('script')[0];
			s.parentNode.insertBefore(wf, s);
		})();
	</script>
	<script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
	<script type="text/javascript" src="/js/bootstrap.min.js"></script>
	{% block js %}{% endblock %}
</body>
</html>