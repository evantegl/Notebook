{% extends "base.jinja" %}

{% block content %}
	<form action="/contact" method="post" class="form form-horizontal">
		<legend>Contact</legend>
		<div class="control-group">
			<label for="name" class="control-label">Name:</label>
			<div class="controls">
				<input name="name" type="text" id="name" placeholder="your name">
			</div>
		</div>
		<div class="control-group">
			{% if user %}
			<label class="control-label">Email:</label>
			<div class="controls">
				<span class="input uneditable-input">{{ user.email() }}</span>
			</div>
			{% else %}
			<label for="email" class="control-label">Email:</label>
			<div class="controls">
				<input type="text" name="email" id="email" placeholder="your email">
			</div>
			{% endif %}
		</div>
		<div class="control-group">
			<label for="message" class="control-label">Message:</label>
			<div class="controls">
				<textarea name="message" id="message" cols="20" rows="5"></textarea>
			</div>
		</div>
		<div class="form-actions">
			<button class="btn btn-success" type="submit"><i class="icon-ok icon-white"></i> Send</button>
			<button class="btn btn-danger" type="reset"><i class="icon-remove icon-white"></i> Reset</button>
		</div>
	</form>
{% endblock %}